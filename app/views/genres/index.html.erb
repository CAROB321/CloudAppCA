<div class="container-fluid pt-5">
  <div class="row padding-top="50px">
    <div class="col-lg-3">
    </div>
    <div class="col-lg-6 d-flex flex-column align-items-center">
      <br />
      <%= link_to "ADD NEW GENRE", new_genre_path, class: "btn btn-warning mb-3" %>
      <hr class="hr mb-4" />
      <% @genres.each do |genre| %>
        <div class="card mb-4" style="width: 75%; margin: 0 auto;">
          <div class="card-body">
            <div id="<%= dom_id genre %>">
              <h5 class="card-title"><%= genre.name.upcase %></h5>
              <hr />
              <p class="detailtext w-100">Description</p>
              <p class="infotext mb-3"><%= genre.description.upcase %></p>
              <p class="detailtext w-100">Location</p>
              <p class="infotext mb-3"><%= genre.location.upcase %></p>
              <div class="buttons btn-space">
                <%= link_to "SHOW GENRE", genre, class: "btn btn-outline-info btn-sm" %>
                <%= link_to 'EDIT GENRE', edit_genre_path(genre), class: "btn btn-outline-warning btn-sm" %>
                <%= button_to "DELETE GENRE", genre, method: :delete, class: "btn btn-outline-danger btn-sm" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <div class="col-lg-3">
  </div>
  </div>
</div>
