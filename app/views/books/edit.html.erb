<div class="container-fluid pt-5">
  <div class="row">
    <div class="col-lg-3">
    </div>
    <div class="col-lg-6 centredisplay">   
      <br />
      <p class="headingtext">EDIT BOOK IN THE <%= @genre.name.upcase %> GENRE</p>
      <br />
      
      <!-- Renders the form partial for editing the book -->
      <%= render "form", book: @book %>
      
      <!-- Link to go back to the show page of the edited book -->
      <%= link_to "BACK TO #{@book.title.upcase} DETAILS", genre_book_path(@genre, @book), class: 'btn btn-primary btn-sm' %>
    </div>
    <div class="col-lg-3">
    </div>
  </div>
</div>
